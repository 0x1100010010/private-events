<div class="container-fluid justify-content-center my-4">
  <div class="row justify-content-center">
    <div class="col-5 p-4 m-5 rounded shadow-sm p-0">
      <h3 class="text-center">Event</h3>
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name,
                autofocus: true,
                required: true,
                class: "form-control string required input mb-3" %>
    <%= f.input :description,
                required: true,
                class: "form-control string required input mb-3" %>
    <%= f.input :location,
                required: true,
                class: "form-control string required input mb-3" %>
    <%= f.input :start_time, class: 'mb-2' %>
    <%= f.input :end_time, class: 'mb-2' %>
    <%= f.input :date, class: 'mb-2' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-secondary w-100 p-3 my-3"  %>
  </div>
<% end %>
      <%= link_to 'Back', events_path, class:"btn btn-light w-100 my-3" %>
</div>
</div>
</div>